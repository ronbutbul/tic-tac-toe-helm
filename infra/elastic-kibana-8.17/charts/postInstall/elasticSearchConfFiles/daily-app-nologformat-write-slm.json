{
    "name": "<daily-snap-{now/d}>",
    "schedule": "0 0 9 * * ?",
    "repository": "snapelastic",
    "config": {
      "indices": [
        "app-nologformat-write",
        "app-adlg-write"
      ],
      "ignore_unavailable": true,
      "include_global_state": false,
      "partial": true
    },
    "retention": {
      "expire_after": "2d",
      "min_count": 10,
      "max_count": 15
    }
  }